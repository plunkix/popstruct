# Database
DATABASE_URL=postgresql://popstruct:popstruct_password@db:5432/popstruct
POSTGRES_USER=popstruct
POSTGRES_PASSWORD=popstruct_password
POSTGRES_DB=popstruct

# Backend
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=./app/static/uploads
RESULTS_DIR=./app/static/results

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_BASIC_PRICE_ID=price_basic_monthly

# Usage Limits
FREE_MAX_FILE_SIZE_MB=50
FREE_MAX_JOBS_PER_DAY=10
FREE_MAX_STORAGE_GB=1
PREMIUM_MAX_FILE_SIZE_MB=500
PREMIUM_MAX_JOBS_PER_DAY=100
PREMIUM_MAX_STORAGE_GB=50

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email (optional for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@popstruct.com

# Environment
ENVIRONMENT=development
